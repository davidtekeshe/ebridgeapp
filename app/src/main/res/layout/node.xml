    <com.ebridgevas.android.ebridgeapp.widget.CircleImageView
        android:id="@+id/node_thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/node_thumbnail"
        android:background="@drawable/textlines" >

        <TextView
            android:id="@+id/node_text_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/title"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/node_text_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sub_title"
            android:layout_marginTop="8dp"
            android:paddingBottom="12dp"
            android:layout_below="@+id/node_text_top_left"
            android:layout_alignLeft="@+id/node_text_top_left"/>
    </RelativeLayout>

